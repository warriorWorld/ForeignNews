<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/white" />

    <RelativeLayout
        android:id="@+id/bottom_bar_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:visibility="visible">

        <ImageView
            android:id="@+id/backward_iv"
            android:layout_width="@dimen/bottombar_button"
            android:layout_height="@dimen/bottombar_button"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/bottombar_button_margin"
            android:layout_toLeftOf="@+id/forward_iv"
            android:src="@drawable/backward" />


        <ImageView
            android:id="@+id/forward_iv"
            android:layout_width="@dimen/bottombar_button"
            android:layout_height="@dimen/bottombar_button"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/bottombar_button_margin"
            android:layout_toLeftOf="@+id/home_iv"
            android:src="@drawable/forward" />

        <ImageView
            android:id="@+id/home_iv"
            android:layout_width="@dimen/bottombar_button"
            android:layout_height="@dimen/bottombar_button"
            android:layout_centerInParent="true"
            android:src="@drawable/home" />

        <TextView
            android:id="@+id/web_num_iv"
            android:layout_width="@dimen/bottombar_button"
            android:layout_height="@dimen/bottombar_button"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/bottombar_button_margin"
            android:layout_toRightOf="@+id/home_iv"
            android:background="@drawable/circle_gray"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/english_browser"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/options_iv"
            android:layout_width="@dimen/bottombar_button"
            android:layout_height="@dimen/bottombar_button"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/bottombar_button_margin"
            android:layout_toRightOf="@+id/web_num_iv"
            android:src="@drawable/options" />
    </RelativeLayout>

</RelativeLayout>


